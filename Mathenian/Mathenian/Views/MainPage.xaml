<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mathenian.Views.MainPage"
             Title="{Binding Title}">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <BoxView Grid.Row="0"
                     Grid.Column="2"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="2"
                     Grid.Column="2"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="4"
                     Grid.Column="1"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     Rotation="45"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="4"
                     Grid.Column="3"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     Rotation="135"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="6"
                     Grid.Column="0"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="6"
                     Grid.Column="4"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="8"
                     Grid.Column="0"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <BoxView Grid.Row="8"
                     Grid.Column="4"
                     Grid.RowSpan="3"
                     HeightRequest="100"
                     WidthRequest="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     BackgroundColor="LightGray"/>
            <Button Text="Arithmetic"
                    Grid.Row="0"
                    Grid.Column="2"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[0]}"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Arithmetic"/>
            <Button Text="Algebra"
                    Grid.Row="2"
                    Grid.Column="2"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[1]}"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Algebra"/>
            <Button Text="Geometry"
                    Grid.Row="4"
                    Grid.Column="2"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[2]}"
                    CommandParameter="Geometry"/>
            <Button Text="Series"
                    Grid.Row="6"
                    Grid.Column="0"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[3]}"
                    CommandParameter="Series"/>
            <Button Text="Sets"
                    Grid.Row="6"
                    Grid.Column="4"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[6]}"
                    CommandParameter="Sets"/>
            <Button Text="Differential"
                    Grid.Row="8"
                    Grid.Column="0"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[4]}"
                    CommandParameter="Differential"/>
            <Button Text="Probability"
                    Grid.Row="8"
                    Grid.Column="4"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[7]}"
                    CommandParameter="Probability"/>
            <Button Text="Integral"
                    Grid.Row="10"
                    Grid.Column="0"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[5]}"
                    CommandParameter="Integral"/>
            <Button Text="Statistics"
                    Grid.Row="10"
                    Grid.Column="4"
                    HeightRequest="60"
                    WidthRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{Binding ButtonColors[8]}"
                    CommandParameter="Statistics"/>
        </Grid>
    </ScrollView>
</ContentPage>